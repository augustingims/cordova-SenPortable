<?xml version='1.0' encoding='utf-8'?>
<widget id="com.mit.senportable" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>SenPortable</name>
    <description>
        SenPortable est un service de localisation dâ€™un Smartphone. Il propose un site web et une application mobile permettant de localiser son Smartphone phone.
    </description>
    <author email="augustingims@gmail.com" href="http://teamdevsolution.com">
        TECHAP KEMADJEU AUGUSTIN MARIUS
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <preference name="SplashScreenDelay" value="3000" />
    <preference name="SplashScreen" value="screen" />
    <platform name="android">
        <allow-intent href="market:*" />
        <splash src="res/screen/android/senportable.png" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
</widget>
